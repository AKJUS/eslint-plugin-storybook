{
  "name": "eslint-plugin-storybook",
  "version": "0.0.0",
  "description": "Best practice rules for Storybook",
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "storybook"
  ],
  "author": "yannbf@gmail.com",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/storybookjs/linter"
  },
  "scripts": {
    "lint": "eslint --fix .",
    "test": "mocha tests --recursive",
    "generate-rule": "npx -p yo -p generator-eslint -c 'yo eslint:rule'",
    "update-configs": "node ./tools/update-configs.js",
    "update-docs": "node ./tools/update-rules-list.js",
    "update-all": "yarn update-configs && yarn update-docs",
    "prepare": "husky install",
    "prettier": "prettier --write ."
  },
  "dependencies": {
    "requireindex": "^1.1.0"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-plugin": "^3.2.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "mocha": "^9.0.0",
    "prettier": "^2.4.0",
    "ts-dedent": "^2.2.0",
    "typescript": "^4.4.3"
  },
  "engines": {
    "node": "12.x || 14.x || >= 16"
  },
  "peerDependencies": {
    "eslint": ">=6"
  },
  "license": "MIT",
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
